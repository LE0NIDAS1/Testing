@model IEnumerable<PresentationLayer.Models.InitialResourceModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create", "InitialResource", new { idGame = this.Request.QueryString["idGame"] }, null)
</p>
<table class="table">
    <tr>
        <th hidden>
            @Html.DisplayNameFor(model => model.idResource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td hidden>
                @Html.DisplayFor(modelItem => item.idResource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.IdGame)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idResource, idGame = item.IdGame })
            </td>
        </tr>
    }
</table>
