@model PresentationLayer.Models.ActionModels.CreateModel
@using PresentationLayer.Models;
@{
    ViewBag.Title = "CreatActionCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr /> 
        @Html.HiddenFor(model => model.IDGame)
        <div class="form-group">
            @Html.LabelFor(model => model.idGameObject, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.idGameObject, ViewData["GameObject"] as SelectList)
                @Html.ValidationMessageFor(model => model.idGameObject, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


